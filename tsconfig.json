{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@scene/*": [
        "src/scene/*"
      ],
      "@bases/*": [
        "src/bases/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ]
    }
  }
}
